@model Cliente

@{
    ViewData["Title"] = "CadastroCliente";
}

<form asp-action="CadastroCliente" asp-controller="Home" method="post">

    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Cadastro de cliente
                        @*<a href="#" data-html="code_register_1" class="showcode">[code]</a>*@
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_SUCESSO"] != null)
                                {
                                    <div class="row justify-content-center">
                                        <div class="col">
                                            <p class="alert alert-success">@TempData["MSG_SUCESSO"]</p>
                                        </div>
                                    </div>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->

                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="genero" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="genero" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                <br/>
                                    <span asp-validation-for="Genero"></span>
                                </div> <!-- form-group end.// -->

                                <div class="form-group">
                                    <label asp-for="CPF">CPF</label>
                                    <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div> <!-- form-group end.// -->

                                <div class="form-group">
                                    <label asp-for="Telefone">Telefone</label>
                                    <input type="text" asp-for="Telefone" class="form-control" placeholder="">
                                    <span asp-validation-for="Telefone"></span>
                                </div> <!-- form-group end.// -->

                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <small class="form-text text-muted">
                                        Nós nunca compartilhamos seus dados.
                                    </small>
                                    <span asp-validation-for="Email"></span>
                                </div> <!-- form-group end.// -->
                                @*<div class="form-row">
            <div class="form-group col-md-6">
                <label>City</label>
                <input type="text" class="form-control">
            </div> <!-- form-group end.// -->
            <div class="form-group col-md-6">
                <label>Country</label>
                <select id="inputState" class="form-control">
                    <option> Choose...</option>
                    <option>Uzbekistan</option>
                    <option>Russia</option>
                    <option selected="">United States</option>
                    <option>India</option>
                    <option>Afganistan</option>
                </select>
            </div> <!-- form-group end.// -->
        </div> <!-- form-row.// -->*@
                                <div class="form-group">
                                    <label asp-for="Senha">Crie sua senha</label>
                                    <input asp-for="Senha" class="form-control" type="password">
                                    <span asp-validation-for="Senha"></span>
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div> <!-- form-group// -->
                                @*<small class="text-muted">
            By clicking the 'Sign Up' button, you confirm that you
            accept our <br> Terms of use and Privacy Policy.
        </small>*@

                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Já possui um cadastro? <a asp-controller="Home" asp-action="Login">Entrar</a></div>
                        </div> <!-- card.// -->

                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>
    </main>

</form>

